<div class="card">
    <div class="card-header" id="headingTextEditor1">
        <h2 class="mb-0">
            <button class="btn btn-link collapsed" type="button" data-toggle="collapse"
                data-target="#collapseTextEditor1" aria-expanded="false" aria-controls="collapseTextEditor1">
                Texts
            </button>
        </h2>
    </div>
    <div id="collapseTextEditor1" class="collapse show" aria-labelledby="headingTextEditor1" data-parent="#accordion">
        <div class="card-body">
            <div class="form-group">
                <select id="language" class="form-control">
                    <option value="en">en</option>
                    <option value="fr">fr</option>
                    <option value="es">es</option>
                </select>
            </div>
            <div class="form-group">
                <select id="category" class="form-control">
                    {{#each categories}}
                    <option value="{{ this }}">{{ this }}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Quote</label>
                <textarea id="quote" class="form-control" placeholder="Your quote here">Living well is the best revenge
              </textarea>

            </div>
            <div class="form-group">
                <label>Quote width</label>
                <input id="quotewidth" class="form-control" type="text" />
            </div>
            <div class="form-group">
                <input id="isquoteshadow" class="form-check-input" type="checkbox" />
                <label class="form-check-label" for="defaultCheck2">
                    Is quote shadow?
                </label>
            </div>
            <div class="form-group">
                <label>Font size</label>
                <input id="quotefontsize" class="form-control" type="text" />
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Author</label>
                <input id="author" class="form-control" placeholder="The author" value="Oscar Wilde" />
            </div>
            <div id="gsheets-carousel" class="carousel slide" data-interval="false" style="background:lightgray">
                <div class="carousel-inner">

                </div>
                <a class="carousel-control-prev" href="#gsheets-carousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#gsheets-carousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            Row num: <p id="quoteid" class="align-left"></p>
            Total: <p id="quotenumber" class="align-left"></p>
        </div>
    </div>
</div>