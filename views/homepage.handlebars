<div class="container-fluid">
    <div class="row">
        <div class="col-8">
            <canvas id="canvas"></canvas>
            <a href="#" id="exportlink">Export link</a>
        </div>
        <div class="col-4">
            <div class="accordion" id="accordion">
                <div class="card">
                    <div class="card-header" id="headingOne">
                        <h2 class="mb-0">
                            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne"
                                aria-expanded="true" aria-controls="collapseOne">
                                Image URL
                            </button>
                        </h2>
                    </div>

                    <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Image URL</label>
                                <input type="text" name="url" class="form-control" id="image"
                                    value="https://images.unsplash.com/photo-1473172707857-f9e276582ab6?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2350&q=100"
                                    placeholder="Enter image URL" />
                                <div>
                                    https://images.unsplash.com/photo-1476610182048-b716b8518aae?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1127&q=100
                                </div>
                                <div>
                                    https://images.unsplash.com/photo-1489710437720-ebb67ec84dd2?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=100
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header" id="headingTwo">
                        <h2 class="mb-0">
                            <button class="btn btn-link collapsed" type="button" data-toggle="collapse"
                                data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Images
                            </button>
                        </h2>
                    </div>
                    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Images</label>
                                <input type="text" name="image-search" class="form-control" id="unsplash-search"
                                    placeholder="Search image theme" />
                                <div id="unsplash-carousel" class="carousel slide" data-interval="false">
                                    <div class="carousel-inner">

                                    </div>
                                    <a class="carousel-control-prev" href="#unsplash-carousel" role="button"
                                        data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#unsplash-carousel" role="button"
                                        data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                                <div class="form-group text-right">
                                    <button class="btn btn-primary" id="selectimage">Select</button>
                                </div>
                                <div class="form-group">
                                    <label>Scale</label>
                                    <input id="imagescale" class="form-control" type="text" />
                                </div>
                                <div class="form-group text-right">
                                    <a href="#" id="selectedimageid" target="_blank">Loading...</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header" id="headingThree">
                        <h2 class="mb-0">
                            <button class="btn btn-link collapsed" type="button" data-toggle="collapse"
                                data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                Texts
                            </button>
                        </h2>
                    </div>
                    <div id="collapseThree" class="collapse show" aria-labelledby="headingThree"
                        data-parent="#accordion">
                        <div class="card-body">
                            <div class="form-group">
                                <select id="language" class="form-control">
                                    <option value="en">en</option>
                                    <option value="fr">fr</option>
                                    <option value="es">es</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <select id="category" class="form-control">
                                    {{#each categories}}
                                    <option value="{{ this }}">{{ this }}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Quote</label>
                                <textarea id="quote" class="form-control" placeholder="Your quote here">
Living well is the best revenge
              </textarea>

                            </div>
                            <div class="form-group">
                                <label>Quote width</label>
                                <input id="quotewidth" class="form-control" type="text" />
                            </div>
                            <div class="form-group">
                                <input id="isquoteshadow" class="form-check-input" type="checkbox" />
                                <label class="form-check-label" for="defaultCheck2">
                                    Is quote shadow?
                                </label>
                            </div>
                            <div class="form-group">
                                <label>Font size</label>
                                <input id="quotefontsize" class="form-control" type="text" />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Author</label>
                                <input id="author" class="form-control" placeholder="The author" value="Oscar Wilde" />
                            </div>
                            <div id="gsheets-carousel" class="carousel slide" data-interval="false"
                                style="background:lightgray">
                                <div class="carousel-inner">

                                </div>
                                <a class="carousel-control-prev" href="#gsheets-carousel" role="button"
                                    data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#gsheets-carousel" role="button"
                                    data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                            <p id="quotenumber" class="align-left"></p>
                        </div>
                    </div>
                    <div class="card-header" id="headingFour">
                        <h2 class="mb-0">
                            <button class="btn btn-link collapsed" type="button" data-toggle="collapse"
                                data-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                Colors
                            </button>
                        </h2>
                    </div>
                    <div id="collapseFour" class="collapse" aria-labelledby="headingFour" data-parent="#accordion">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Font</label>
                                <input type="text" id="quotefontcolor" name="color" class="form-control" />
                                <div id="quotefontcolorpicker"></div>
                            </div>
                            <div class="form-group">
                                <label>Shadow</label>
                                <input type="text" id="quoteshadowcolor" name="color" class="form-control" />
                                <div id="quoteshadowcolorpicker"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <button id="submit" class="btn btn-primary">Submit</button>


        </div>
    </div>
</div>
<div id="data" data-unsplash-api-key="{{ unsplashApiKey }}" data-google-sheets-api-key="{{ googleSheetsApiKey }}"></div>

<script src="/js/jquery.min.js"></script>
<script src="/css/farbtastic.js"></script>
<script src="/js/popper.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/qs.js"></script>
<script src="/js/unsplash.js"></script>
<script src="/js/fabric.min.js"></script>
<script src="/js/image-editor.js"></script>